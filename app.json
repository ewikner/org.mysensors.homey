{
    "id": "org.mysensors.homey",
    "version": "0.1.7",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Mysensors.org"
    },
    "description": {
        "en": "Mysensors.org app to Homey"
    },
    "category": ["climate","appliances", "lights"],
    "author": {
        "name": "Erik Wikner",
        "email": "erik.wikner@gmail.com"
    },
    "contributors": {
        "developers": [
            {
                "name" : "Terry Hendrix",
                "email": "terryhendrix90@gmail.com"
            }
        ]
    },
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "capabilities": {
        "mysensors_custom": {
            "type": "string",
            "title": {
                "en": "Custom"
            },
            "getable": true,
            "setable": true
        },
        "mysensors_number": {
            "type": "number",
            "title": {
                "en": "Custom number"
            },
            "decimals": 2,
            "getable": true,
            "setable": true
        },
        "mysensors_boolean": {
            "type": "boolean",
            "title": {
                "en": "Custom boolean"
            },
            "getable": true,
            "setable": true
        },
        "mysensors_water_flow": {
            "type": "number",
            "title": {
                "en": "Water flow",
                "nl": "Watergebruik"
            },
            "units": {
                "en": "L/h"
            },
            "desc": {
                "en": "Water flow in liters per hour",
                "nl": "Watergebruik in liters per uur"
            },
            "chartType": "stepLine",
            "decimals": 2,
            "getable": true,
            "setable": false
        }
    },
    "capabilitiesOptions": {
        "mysensors_water_flow": {
            "title": {
                "en": "Water flow"
            }
        },
        "mysensors_custom": {
            "title": {
                "en": "Custom"
            }
        },
        "mysensors_number": {
            "title": {
                "en": "Custom number"
            }
        },
        "mysensors_boolean": {
            "title": {
                "en": "Custom boolean"
            }
        }
    },
    "drivers": [
        {
            "id": "mysensors",
            "name": {
                "en": "Mysensors Driver"
            },
            "images": {
                "large": "./drivers/mysensors/assets/images/large.png",
                "small": "./drivers/mysensors/assets/images/small.png"
            },
            "class": "",
            "capabilities": [],
            "pair": [
                {
                    "id": "select_capabilities"
                }
            ],
            "mobile": {
                "components": [
                    {
                        "id" : "icon",
                        "capabilities": [ ]
                    },
                    {
                        "id": "sensor",
                        "capabilities": [ "mysensors_water_flow" ],
                        "options": {
                            "icons": {
                                "mysensors_water_flow": "/assets/meter_water.svg"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "value_changed",
                "title": {
                    "en": "Value has changed"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    }
                ],
                "tokens": [
                    {
                        "name": "current_value",
                        "title": { 
                            "en": "Value"
                        }
                    }
                ]
            },
            {
                "id": "value_on",
                "title": {
                    "en": "Value is On"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    }
                ],
                "tokens": [
                    {
                        "name": "current_value",
                        "title": { 
                            "en": "Value"
                        }
                    }
                ]
            },
            {
                "id": "value_off",
                "title": {
                    "en": "Value is Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    }
                ],
                "tokens": [
                    {
                        "name": "current_value",
                        "title": { 
                            "en": "Value"
                        }
                    }
                ]
            }
        ],
        "conditions": [
            {
                "id": "value_is",
                "title": {
                    "en": "Value is..."
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "value_is",
                        "type": "text",
                        "placeholder": { 
                            "en": "Value IS "
                        }
                    }
                ]
            },
            {
                "id": "onoff",
                "title": {
                    "en": "On / Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "value_is",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": true,
                                "label": {
                                        "en": "On"
                                }
                            },
                            {
                                "id": false,
                                "label": {
                                        "en": "Off"
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "set_text",
                "title": {
                    "en": "Set text"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "value",
                        "type": "text",
                        "placeholder": [
                            {
                                "en": "Value"
                            }
                        ]
                    }
                ]
            },
            {
                "id": "set_number",
                "title": {
                    "en": "Set number"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "value",
                        "type": "number",
                        "placeholder": [
                            {
                                "en": "Value"
                            }
                        ]
                    }
                ]
            },
            {
                "id": "set_onoff",
                "title": {
                    "en": "On / Off"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=mysensors"
                    },
                    {
                        "name": "value",
                        "type": "dropdown",
                        "values": [
                            {
                                "id": 1,
                                "label": {
                                        "en": "On"
                                }
                            },
                            {
                                "id": 0,
                                "label": {
                                        "en": "Off"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
}